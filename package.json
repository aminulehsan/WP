{
	"name": "pageflash",
	"slug": "pageflash",
	"homepage": "https://theaminul.com/pageflash/",
	"description": "PageFlash - Fast and Efficient Headless Browser WordPress Plugin",
	"version": "1.0.2",
	"scripts": {
		"build": "concurrently \"wp-scripts build\" \"grunt\"",
		"start": "wp-scripts start",
		"start:hot": "wp-scripts start --hot",
		"make-pot": "wp i18n make-pot ./languages/pageflash.pot",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:standard": "phpcs --standard=phpcs.xml",
		"lint:fix": "wp-scripts lint-js --fix && wp-scripts lint-style --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"zip": "concurrently \"wp-scripts build\" \"grunt\" && composer archive --file=../dist/pageflash"
	},
	"devDependencies": {
		"@wordpress/icons": "^9.46.0",
		"@wordpress/scripts": "^30.7.0",
		"concurrently": "^9.1.0",
		"grunt": "^1.6.1",
		"grunt-checktextdomain": "^1.0.1",
		"load-grunt-tasks": "^5.1.0",
		"npm-check-updates": "^16.14.20",
		"path": "^0.12.7",
		"webpack-remove-empty-scripts": "^1.0.4"
	},
	"dependencies": {
		"quicklink": "^2.3.0"
	}
}
