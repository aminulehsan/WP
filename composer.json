{
	"name": "theaminul/pageflash",
	"description": "PageFlash - Fast and Efficient Headless Browser WordPress Plugin",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
		"plugin",
		"pageflash"
	],
	"license": "GPL-3.0-or-later",
	"homepage": "https://github.com/theaminuldev/pageflash/",
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:wpcs:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
		"lint:php:fix": "@php ./vendor/bin/parallel-lint --fix --exclude .git --exclude vendor --exclude node_modules .",
		"make-pot": "wp i18n make-pot . languages/pageflash.pot",
		"zip": "composer archive --file=pageflash"
	},
	"autoload": {
		"psr-4": {
			"PageFlash\\": "includes/"
		}
	},
	"authors": [
		{
			"name": "Aminul Islam",
			"email": "hello@theaminul.com",
			"role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"archive-format": "zip"
	},
	"exclude": [
		"/node_modules",
		"/vendor",
		"/tests",
		"/.git",
		"/.github",
		"/.vscode",
		"/build"
	],
	"archive": {
		"exclude": [
			"/node_modules",
			"/vendor",
			"/src"
		]
	},
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
		"squizlabs/php_codesniffer": "^3.11",
		"wp-coding-standards/wpcs": "^3.1",
		"php-parallel-lint/php-parallel-lint": "^1.4",
		"wp-cli/i18n-command": "^2.6",
		"sirbrillig/phpcs-changed": "^2.11",
		"phpcompatibility/phpcompatibility-wp": "^2.1"
	}
}
